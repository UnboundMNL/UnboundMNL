<div class="p-4" style="overflow: scroll;">
    <!-- Dashboard content -->
    <h4 class="mt-3 page-title">Dashboard</h4>

    <div class="dashboard-actions">

        <% for (let i = 0; i < buttons.length; i++) {%>
        <!-- CLUSTERS BUTTON -->
        <div class="left-card left-card-<%= buttons[i].color %>" id="<%=i%>">
            <div>
                <span><%=buttons[i].text%></span>
            </div>
	    <a href="<%= buttons[i].href %>"
	       class="btn btn-primary dashboard-btn">View Clusters</a>
        </div>

        <% } %>
    </div>

    <!-- Statistics -->
    <div class="dashboard-stats flex flex-column mt-3">
        <div class="flex flex-row gap-2">
                <div class="container dashboard-org-structure section-card">
                    <h5 class="mb-3">Organizational Structure</h5> 
                    <% if (authority=="Admin") { %>
                    <div class="d-flex justify-content-between">
                        <span>Total number of Clusters</span>
                        <span class="ml-auto"><%=nCluster%></span>
                    </div>
                    <% } %>
                    <% if (authority=="Admin" || authority=="SEDO") { %>
                    <div class="d-flex justify-content-between">
                        <span>Total number of Projects</span>
                        <span class="ml-auto"><%=nProject%></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Total number of SHGs</span>
                        <span class="ml-auto"><%=nGroup%></span>
                    </div>
                    <% } %>
                    <div class="d-flex justify-content-between">
                        <span>Total number of Members</span>
                        <span class="ml-auto"><%=nMember%></span>
                    </div>
                </div>
                <div class="dashboard-card">
                    <div>
                        <h5>Total Savings</h5>
                        <h4 class="ml-auto fw-bold format-number"><%=savings%></h4>
                    </div>
                </div>
        </div>

        <!-- Chart -->
        <div class="container chart-container w-full col-lg-7 align-middle">
            <canvas id="myChart"></canvas>
        </div>  
    </div>
</div>
